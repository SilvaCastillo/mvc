<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="favicon.ico">
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_script_tags('app') }}
    </head>
    <body class="bg-gradient-to-b from-gray-900 via-slate-900 to-black text-gray-100 min-h-screen">
        <div class="header">
            <div class="banner-container w-full h-[65vh] bg-gradient-to-r from-emerald-900 via-emerald-800 to-emerald-900 bg-cover bg-center" role="banner">
                
                <div class="w-[85%] mx-auto flex justify-between items-center p-2">
                    <a href="{{ url("proj") }}"  class="text-[2em] ml-10 mr-auto font-serif text-4xl text-amber-400 font-bold no-underline pt-4 pr-4 pb-4 pl-0 md:p-0">
                        Project
                    </a>
                    <nav>
                        <ul class="flex justify-end py-4 list-none text-[19px]">
                            <li class="relative inline-block mx-5 text-[19px] group"><a href="{{ url("proj") }}" class="text-amber-50 hover:text-amber-300 no-underline transition-colors font-medium tracking-wide uppercase text-sm">Home</a> <span class="absolute left-0 -bottom-1 h-[3px] w-0 bg-amber-300 transition-all duration-500 group-hover:w-full"></span></li>
                            <li class="relative inline-block mx-5 text-[19px] group"><a href="{{ url("proj_about") }}" class="text-amber-50  no-underline hover:text-amber-300 transition-colors font-medium tracking-wide uppercase text-sm">About</a> <span class="absolute left-0 -bottom-1 h-[3px] w-0 bg-amber-300 transition-all duration-500 group-hover:w-full"></span></li>
                            <li class="relative inline-block mx-5 text-[19px] group"><a href="{{ path("index") }}" class="text-amber-100 no-underline hover:text-amber-300 transition-colors font-medium tracking-wide uppercase text-sm">Back To site</a> <span class="absolute left-0 -bottom-1 h-[3px] w-0 bg-amber-300 transition-all duration-500 group-hover:w-full"></span></li>

                        </ul>
                    </nav>
                </div>
                    <h1 class="w-full relative pt-12 pr-12 pb-12 pl-0 top-[30%] -translate-y-1/2 text-center text-amber-100 text-[70px] mt-20">{{name}}</h1>
            </div>
        </div>
        
        {% block content %}
        default content
        {% endblock %}
    </body>
    <footer class="bg-gradient-to-t from-black via-gray-950 to-gray-900 border-t-2 border-emerald-700 inline-table justify-between h-[10vh] flex-none text-center text-gray-400">
        <div class="text-[0.7rem] my-5">
            <ul class="flex justify-center py-4 list-none">
                <li class="px-4"><a href="{{ url("proj") }}" class="text-gray-400 hover:text-amber-400 no-underline" >Home</a></li>
                <li class="px-4"><a href="{{ url("proj_about") }}" class="text-gray-400 hover:text-amber-400 no-underline" >About</a></li>
                <li class="px-4"><a href="{{ path("index") }}" class="text-gray-400 hover:text-amber-400 no-underline">Back To site</a></li>
            </ul>
        </div>
        <div class="w-full flex items-center justify-center mb-5">
            <p class="text-[0.9rem] text-gray-500 text-center">
                Â© Pablo S 2025
            </p>
        </div>
    </footer>
</html>
