{% extends "base.html.twig" %}

{% block title %}All Books{% endblock %}

{% block content %}

<div class="container">
    <div class="content-section">
        <div class="content">
            <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
                <h2 class="sr-only">Products</h2>

                <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
                {% for book in books %}
                    <a href="{{ path("get_book_by_id", {id: book.id}) }}" class="group">
                        <img src="" alt="" class="aspect-square w-full rounded-lg bg-gray-200 object-cover group-hover:opacity-75 xl:aspect-7/8" />
                        <h3 class="mt-4 text-sm text-gray-700">{{book.author}}</h3>
                        <p class="mt-1 text-lg font-medium text-gray-900">{{book.title}}</p>
                    </a>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}