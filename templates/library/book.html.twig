{% extends "base.html.twig" %}

{% block title %}Book{% endblock %}

{% block content %}

<div class="container">
    <div class="relative  mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8 rounded-lg bg-[#f4f7ff]">
        <a href="{{ path('library_books') }}" class="absolute right-3 top-3 inline-flex h-9 w-9 items-center justify-center text-gray-500 hover:bg-gray-100 hover:text-gray-700 " aria-label="Close">
            <svg class="h-8 w-8" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M6.22 6.22a.75.75 0 0 1 1.06 0L10 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06L11.06 10l2.72 2.72a.75.75 0 0 1-1.06 1.06L10 11.06l-2.72 2.72a.75.75 0 1 1-1.06-1.06L8.94 10 6.22 7.28a.75.75 0 0 1 0-1.06Z"/>
            </svg>
        </a>
        <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
            <div class="shrink-0">
            {% if book.coverUrl is defined and book.coverUrl %}
                <img src="{{ asset('img/covers/' ~ book.coverUrl) }}" alt="Omslag till {{book.title}} "
                    class="aspect-square w-full rounded-lg border-gray-900 object-cover" />
            {% else %}
                <img src="{{ asset("img/covers/no-image.png") }}" alt="Omslag till {{book.title}} "
                    class="aspect-square w-full rounded-lg border-gray-900 object-cover" />
            {% endif %}
            </div>

            <div class="relative">
                <a href="{{ path('update_book', {id: book.id}) }}" class="absolute right-2 z-0 inline-flex h-9 w-9 items-center justify-center text-gray-500 hover:bg-gray-100 hover:text-gray-700 " aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="gray" stroke-width="1.5" class="h-5 w-5" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487a2.125 2.125 0 1 1 3.005 3.005L7.5 19.86 3 21l1.14-4.5L16.862 4.487z" />
                    </svg>
                </a>

                <dl class="grid grid-cols-1 gap-3 pr-16">
                    <div>
                        <dt class="text-xs uppercase tracking-wide text-gray-500">Title</dt>
                        <dd class="text-base text-gray-900">{{book.title}}</dd>
                    </div>
                    <div>
                        <dt class="text-xs uppercase tracking-wide text-gray-500">Author</dt>
                        <dd class="text-base text-gray-900">{{book.author}}</dd>
                    </div>
                    <div>
                        <dt class="text-xs uppercase tracking-wide text-gray-500">ISBN</dt>
                        <dd class="text-base text-gray-900">{{book.isbn}}</dd>
                    </div>
                </dl>
            </div>
            
        </div>
    </div>
</div>

{% endblock %}