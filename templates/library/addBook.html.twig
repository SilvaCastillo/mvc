{% extends "base.html.twig" %}

{% block title %}Add Book{% endblock %}

{% block content %}

<div class="container">
			<form method="post" action="{{ path('add_book') }}" enctype="multipart/form-data" class="mx-auto max-w-md w-full px-4 space-y-4">
				<div class="space-y-12 bg-[#f4f7ff] text-slate-800 ring-1 ring-inset ring-[#dbe5ff] border-2 rounded-2xl border-solid border-white/10">
					<div class=" pb-12">
						<h2 class="mt-8 text-center text-base/7 font-semibold text-gray-900">Lägg till bok</h2>
						<div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
							<div class="sm:col-span-4 sm:col-start-2">
								<label for="book-title" class="block text-sm/6 font-medium text-gray-900">Titel</label>
								<div class="mt-2">
									<input id="book-title" required type="text" name="book-title" autocomplete="given-name" class="block w-full rounded-md bg-[#f9fbff] text-slate-900 ring-1 ring-inset ring-[#dbe5ff] focus:ring-2 focus:ring-[#a6c1ee] px-3 py-1.5 text-base outline outline-1 -outline-offset-1 outline-white/10 placeholder:text-gray-500 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm/6" />
								</div>
							</div>

							<div class="sm:col-span-4 sm:col-start-2">
								<label for="book-isbn" class="block text-sm/6 font-medium text-gray-900">ISBN</label>
								<div class="mt-2">
									<input id="book-isbn" required pattern="\d{13}" type="text" name="book-isbn" inputmode="numeric" autocomplete="family-name" class="block w-full rounded-md bg-[#f9fbff] text-slate-900 ring-1 ring-inset ring-[#dbe5ff] focus:ring-2 focus:ring-[#a6c1ee] px-3 py-1.5 text-base outline outline-1 -outline-offset-1 outline-white/10 placeholder:text-gray-500 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm/6" />
								</div>
							</div>

							<div class="sm:col-span-4 sm:col-start-2">
								<label for="author" class="block text-sm/6 font-medium text-gray-900">Författare</label>
								<div class="mt-2">
									<input id="author" required type="author" name="author" autocomplete="author" class="block w-full rounded-md bg-[#f9fbff] text-slate-900 ring-1 ring-inset ring-[#dbe5ff] focus:ring-2 focus:ring-[#a6c1ee] px-3 py-1.5 text-base outline outline-1 -outline-offset-1 outline-white/10 placeholder:text-gray-500 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm/6" />
								</div>
							</div>
						</div>

							<div class="col-span-full mx-16 mt-8">
								<label for="file-upload" class="block text-sm/6 font-medium text-gray-900">Cover photo</label>
								<div class="flex justify-center rounded-lg border border-dashed border-[#a6c1ee] px-6 py-10">
									<div class="text-center">
										<label for="file-upload" class="mt-2 block">
											<svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" class="mx-auto size-12 text-gray-600">
											<path d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z" clip-rule="evenodd" fill-rule="evenodd" />
											</svg>
											<span class="pl-1">Upload a file</span>
											<p class="mt-1 text-xs/5 text-gray-400">PNG, JPG, up to 5MB</p>
										</label>
										<input id="file-upload" name="file-upload" type="file" accept="image/*" class="mt-3 block w-full max-w-xs cursor-pointer text-sm text-gray-700 file:mr-4 file:rounded-md file:border-0 file:bg-indigo-600 file:px-3 file:py-2 file:text-white hover:file:bg-indigo-500">
									</div>
								</div>
							</div>

						<div class="mt-9 pr-8 flex items-center justify-end gap-x-6">
							<a href="{{ path('library_start') }}" 
							<button type="button" class="text-sm/6 font-semibold text-gray-900">Cancel</button></a>
							<button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:focus-visible:outline-indigo-500">Save</button>
						</div>
					</div>
				</div>
			</form>
</div>

{% endblock %}
