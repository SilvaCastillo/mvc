{% extends "base.html.twig" %}

{% block title %}Card Game{% endblock %}

{% block content %}

<div class="container">
	<div class="game-section">
		<div class="card-table">
			{% for card in deck %}
				<div class="inline-block w-[80px] text-center bg-white border border-black rounded-lg border-solid m-8 py-8 px-6">
				{% if '♥' in card or '♦' in card %}
					<p class="text-red-600 text-xl">{{card}}</p>
				{% else %}
					<p class="text-xl">{{card}}</p>
				{% endif %}
				</div>
			{% endfor %}
		</div>
		{{ include('flash.html.twig') }}
	</div>
</div>

{% endblock %}

